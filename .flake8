[flake8]
exclude =
    # Never scan the git folder
    .git,
    # Settings files that do sketchy imports
    src/event_calendar/settings/dev.py,
    src/event_calendar/settings/production.py,
    src/event_calendar/settings/base.py,
    # Autogenerated files
    */migrations/*
    venv/*

    src/tailwind_theme/*

ignore = D100, D104, D106, D107, W504
